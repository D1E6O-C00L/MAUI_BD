<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoU2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoU2.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ProyectoU2">

    <TabBar>
        <Tab Title="Agregar">
            <ShellContent ContentTemplate="{DataTemplate local:AddView}" />
        </Tab>
        <Tab Title="Buscar">
            <ShellContent ContentTemplate="{DataTemplate local:SearchView}" />
        </Tab>
        <Tab Title="Modificar">
            <ShellContent ContentTemplate="{DataTemplate local:UpdateView}" />
        </Tab>
        <Tab Title="Bajas">
            <ShellContent ContentTemplate="{DataTemplate local:DeleteList}" />
        </Tab>
    </TabBar>   

</Shell>
